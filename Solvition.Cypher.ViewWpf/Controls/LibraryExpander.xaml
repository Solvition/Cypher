<Expander
    x:Class="Solvition.Cypher.ViewWpf.Controls.LibraryExpander"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d" 
    d:DesignHeight="450"
    d:DesignWidth="800"
    
    Style="{StaticResource ExpanderNoArrowStyle}">
    <Expander.Header>
        <Grid>
            <Border
                BorderBrush="Blue"
                BorderThickness="2"
                Background="AliceBlue"
                CornerRadius="8">
                <Label
                    Content="Header"/>
            </Border>
        </Grid>
    </Expander.Header>
    <StackPanel>
        <TextBlock
                Text="Foo"/>
        <TextBlock
                Text="Foo"/>
        <TextBlock
                Text="Foo"/>
    </StackPanel>
</Expander>
